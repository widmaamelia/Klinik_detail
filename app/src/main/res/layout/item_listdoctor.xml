<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        app:cardCornerRadius="10sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-5dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDoctor"
                    android:layout_width="85sp"
                    android:layout_height="85sp"
                    app:srcCompat="@drawable/dokter4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/namaDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr Flow Mayet"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SpesDoctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dentist"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10sp">

                <TextView
                    android:id="@+id/JumlahReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:text="123 Reviews" />

                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="1"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="10sp"
                    android:progressBackgroundTint="#FFEB3B"
                    android:stepSize="2" />

                <TextView
                    android:id="@+id/angkaRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:text="4,9" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>